{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "default_locale": "en_US",
  "description": "__MSG_extensionDescription__",
  "version": "0.1",
  "homepage_url": "http://www.mozilla.com/",
  "applications": {
    "gecko": {
      "id": "@webCompatSiteDiagnosisHelper",
      "strict_min_version": "45.0"
    }
  },
  "permissions": [
    "<all_urls>"
  ],
  "content_scripts": [{
    "js": ["content.js"],
    "matches": ["<all_urls>"],
    "run_at": "document_start",
    "all_frames": true
  }]
}

